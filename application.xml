<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="RocketBird" package="com.andreasmcdermott.rocketbird.RocketBird" version="1.0.0" company="Andreas McDermott" />
	
	<!-- output -->
	<app main="com.andreasmcdermott.rocketbird.Main" file="RocketBird" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="800" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<classpath path="C:\Users\Andreas\Repositories\HaxeFramework" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/fnt" rename="fnt" />
	<assets path="assets/snd" rename="snd" />
	<assets path="assets/msc" rename="msc" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>